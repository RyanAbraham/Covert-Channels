{
    "root": true,
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "arrow-body-style": 0,
        "consistent-return": 0,
        // MemberExpression refers to dot functions like `.then` on new lines
        "indent": ["error", 2, { "MemberExpression": 0, "SwitchCase": 1 }],
        "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
        "arrow-parens": ["error", "as-needed", { "requireForBlockBody": true }]
    }
}
