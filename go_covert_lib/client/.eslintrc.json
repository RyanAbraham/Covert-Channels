{
    "root": true,
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "arrow-body-style": 0,
        "consistent-return": 0,
        "no-nested-ternary": 0,
        "no-plusplus": 0,
        "radix": 0, // Disable prompting for radix when using parseInt
        "jsx-a11y/label-has-associated-control": 0,
        "react/jsx-props-no-spreading": 0,
        "react/forbid-prop-types": 0,
        // MemberExpression refers to dot functions like `.then` on new lines
        "indent": ["error", 2, { "MemberExpression": 0, "SwitchCase": 1 }],
        "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
        "arrow-parens": ["error", "as-needed", { "requireForBlockBody": true }]
    }
}
